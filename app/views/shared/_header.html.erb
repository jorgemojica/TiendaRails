<div class="bg-white flex justify-between items-center px-2">
    <%= link_to products_path do %>
        <h1 class="text-2xl font-bold text-teal-500">Vendelo</h1>
    <% end %>

    <div>
        <%= link_to 'Añadir producto', new_product_path, class: "mx-2 text-teal-500 font-bold" if Current.user %>
        <%= link_to 'Mis Favoritos', favorites_path, class: "mx-2 text-teal-500 font-bold" if Current.user %>
        <%= link_to 'Categorías', categories_path, class: "mx-2 text-teal-500 font-bold" if Current.user&.admin? %>
        <%= link_to 'Login', new_session_path, class: "mx-2 text-teal-500 font-bold" unless Current.user %>
        <%= link_to 'Sign Up', new_user_path, class: "mx-2 text-teal-500 font-bold" unless Current.user %>
        <%= link_to 'Log Out', session_path(Current.user.id), data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure?'
        }, class: "mx-2 text-teal-500 font-bold" if Current.user %>
    </div>
</div>