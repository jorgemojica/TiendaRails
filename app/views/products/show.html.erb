<%= javascript_include_tag "turbo", type: "module" %>

<%= image_tag @product.photo, width: 200 if @product.photo.attached? %>

<h1 class='title'><%= @product.title %></h1>

<p class='description'><%= @product.description %></p>

<span class='price'>$<%= @product.price %></span>

<%= link_to 'Editar producto', edit_product_path(@product) if @product.owner? %>

<%= link_to 'Eliminar producto', product_path(@product), data: {
    turbo_method: :delete,
    turbo_confirm: t('common.confirm')
} if @product.owner? %>

<%= link_to "Ver mas productos de #{@product.user.username}", user_path(@product.user.username) %>

<% if @product.favorite %>
  <%= link_to 'ðŸ’”', favorite_path(@product.id), data: {
    turbo_method: :delete
  } %>
<% else %>
  <%= link_to 'ðŸ’–', favorites_path(product_id: @product.id), data: {
    turbo_method: :post
  } %>
<% end %>
