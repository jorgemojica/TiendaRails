<%# <h1>Productos:</h1> %>
<%= turbo_frame_tag 'home' do %>

    <%= form_with url: products_path, method: :get do |form| %>
        <%= form.text_field :query_text, placeholder: 'Buscar Productos...', onChange: 'this.form.requestSubmit()', value: params[:query_text], class: "w-full my-2 rounded-2xl border-gray-200" %>
        <div class="flex">
          <%= form.number_field :min_price, placeholder: 'Precio mínimo', onChange: 'this.form.requestSubmit()', value: params[:min_price], class: "w-1/3 rounded-2xl border-gray-200" %>
          <%= form.number_field :max_price, placeholder: 'Precio máximo', onChange: 'this.form.requestSubmit()', value: params[:max_price], class: "w-1/3 rounded-2xl border-gray-200 mx-2" %>
          <%= form.select :order_by, options_for_select(Product::ORDER_BY.keys.map{ |order| [order] },
              params[:order_by]), {}, { onChange: 'this.form.requestSubmit()', class: "w-1/3 rounded-2xl border-gray-200 text-gray-500" } %>
        </div>
    <% end %>

  <div class="flex overflow-x-scroll gap-2 my-2">
    <%= render(CategoryComponent.new) %>
    <%= render(CategoryComponent.with_collection(@categories)) %>
    <%#= render partial: 'category', collection: @categories %>
  </div>
    <%= turbo_frame_tag :products, class: "flex flex-col m-2" do %>
      <%= turbo_frame_tag "products-#{@pagy.page}", class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap sm:gap-x-2' do %>
          <%= render partial: 'product', collection: @products %>
          <%= turbo_frame_tag "products-#{@pagy.next}", class: 'products flex flex-col w-full sm:flex-row sm:flex-wrap sm:gap-x-2', src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next %>
      <% end %>
    <% end %>
<% end %>