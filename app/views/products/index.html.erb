<%# <h1>Productos:</h1> %>
<%= turbo_frame_tag 'categories' do %>
    <h2><%= t('.title') %></h2>

    <%= form_with url: products_path, method: :get do |form| %>
        <%= form.text_field :query_text, placeholder: 'Buscar Productos...', onChange: 'this.form.requestSubmit()', value: params[:query_text] %>
        <%= form.number_field :min_price, placeholder: 'Precio mínimo', onChange: 'this.form.requestSubmit()', value: params[:min_price] %>
        <%= form.number_field :max_price, placeholder: 'Precio máximo', onChange: 'this.form.requestSubmit()', value: params[:max_price] %>
        <%= form.select :order_by, options_for_select(Product::ORDER_BY.keys.map{ |order| [order] },
            params[:order_by]), {}, { onChange: 'this.form.requestSubmit()' } %>
    <% end %>

    <%= link_to 'All', products_path %>
    <%= render partial: 'category', collection: @categories %>
    <%= render partial: 'product', collection: @products %>
<% end %>